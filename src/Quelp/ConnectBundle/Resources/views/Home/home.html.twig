{% extends "QuelpConnectBundle:Common:layout.html.twig" %}


{% block title %} Accueil {% endblock %}

{% block content %}

    <div class="content clearfix" style="margin-top: 30px">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-sm-5 col-lg-offset-1 col-sm-offset-1">
                    <h1 style="color: #ffffff;margin-bottom: 40px;">Quelp <small style="color: #ffffff">est un réseau social.</small></h1>
                    <div class="col-lg-9">
                        <p style="color: #ffffff;font-size: 16px; line-height: 30px;text-align: center;font-weight: 200">Ce réseau social offre aux utilisateurs, la possibilité de demander de l'aide à d'autres utilisateurs. N'attendez plus, inscrivez-vous !</p>
                    </div>
                    <div class="col-lg-9" style="margin-top: 30px">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="border: 1px solid #f5f5f5;border-radius: 10px">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="{{ asset('bundles/front/img/messages.png') }}" alt="...">
                                    <div class="carousel-caption">
                                        ...
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="{{ asset('bundles/front/img/search_gris.png') }}" alt="...">
                                    <div class="carousel-caption">
                                        ...
                                    </div>
                                </div>

                            </div>

                            <!-- Controls -->
                            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <h1 style="color: #ffffff;margin-bottom: 50px">Inscrivez-vous<small style="color: #ffffff">, c'est gratuit !</small></h1>
                    <form class="form-horizontal form-connexion" role="form">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label"  style="font-weight: 300;color: #ffffff">Nom</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail3" placeholder="Entrez votre nom" style="font-size: 11px;font-style: italic">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label"  style="font-weight: 300;color: #ffffff">Prénom</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail3" placeholder="Entrez votre prénom" style="font-size: 11px;font-style: italic">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label"  style="font-weight: 300;color: #ffffff">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail3" placeholder="Entrez votre adresse mail" style="font-size: 11px;font-style: italic">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label"  style="font-weight: 300;color: #ffffff">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="inputPassword3" placeholder="Entrez votre mot de passe" style="font-size: 11px;font-style: italic">
                            </div>
                        </div>

                        <div class="form-inline">
                            <label class="col-sm-4" style="font-weight: 300;margin-left: -60px;color: #ffffff">Date de naissance</label>

                            <select class="form-control" style="margin-left: -20px">
                                <option></option>
                                <option>01</option>
                                <option>02</option>
                                <option>03</option>
                                <option>04</option>
                            </select>
                            <select class="form-control">
                                <option></option>
                                <option>12</option>
                                <option>11</option>
                                <option>10</option>
                                <option>09</option>
                            </select>
                            <select class="form-control">
                                <option></option>
                                <option>2014</option>
                                <option>2013(e)</option>
                                <option>2012</option>
                                <option>2010</option>
                            </select>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <label class="checkbox-inline" style="font-weight: 300;color: #ffffff">
                                    <input type="checkbox" id="inlineCheckbox1" value="option1"> Homme
                                </label>
                                <label class="checkbox-inline" style="font-weight: 300;color: #ffffff">
                                    <input type="checkbox" id="inlineCheckbox2" value="option2"> Femme
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default" style="background-color: #66afe9;color: #ffffff">S'inscrire</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}